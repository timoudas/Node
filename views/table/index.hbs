{{> navbar}}
 <div class='container-fluid'>
    <div class="row">
        <div class='col col-lg-2'>
            <button class="btn btn-secondary dropdown-toggle" type="button" id="seasonDropDownMenyButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Filter by Season
                <div id='seasonvalue'>{{seasonLabel}}</div>
            </button>
            <div class="dropdown-menu" id="seasonToggle" aria-labelledby="dropdownMenuButton">
                {{#each seasons}}
                        <button class="dropdown-item" type="button" value={{this._id}}>{{this.SeasonLabel}}</button>
                {{/each}}
            </div>
        </div>    
        <div class="col col-lg-2">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="homeAwayDropDownMenyButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Filter by Home or Away
                <div id='typevalue'>All Matches</div>
            </button>
            <div class="dropdown-menu" id="homeAwayToggle" aria-labelledby="dropdownMenuButton">
                <button class="dropdown-item" type="button" value=overall>All Matches</button>
                <button class="dropdown-item" type="button" value=home>Home</button>
                <button class="dropdown-item" type="button" value=away>Away</button>
            </div>
        </div>    
        <div class="col col-lg-2">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="matchDropDownMenyButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Filter by Matchweek
            </button>
            <div class="dropdown-menu" id="matchWeekToggle" aria-labelledby="dropdownMenuButton">
                {{#each matchweeks}}
                        <button class="dropdown-item" type="button" value={{this._id}}>{{this.matchweek}}</button>
                {{/each}}
            </div>
        </div>
        <div class="col col-lg-2">
            <button class='btn btn-secondary' type=''button id='updateDataButton'>
                Update Data
            </button>
        </div>
    </div>
    <table class="table table-dark">
        <thead>
            {{> leagueTableHeader}}
        </thead>
        <tbody id='league-table-rows'>
                {{season}}
                {{#each result}}
                    {{> leagueTableBody this}}
                {{/each}}
        </tbody>
    </table>
</div>

