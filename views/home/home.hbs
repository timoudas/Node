{{> navbar}}

<div class='calender container'>
    <div class='calender-games'>
        {{#each schedule}}
            <div class='calendar-game'>

                <div class='block-home team-home'>
                    <div class='team-title'>
                        <a href='#'>{{this.teams.0.team.shortName}}</a>
                    </div>
                </div>

                <div class='match-info'>
                    <div class='match-time'>
                        {{this.kickoffLabel}}
                    </div>
                </div>

                <div class='block-away team-away'>
                    <div class='team-title'>
                        <a href='#'>{{this.teams.1.team.shortName}}</a>
                    </div>
                </div>

            </div>
        {{/each}}
    </div>
</div>